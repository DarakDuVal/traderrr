#!/bin/bash
# Pre-commit hook for code formatting with black

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if black is installed
if ! command -v black &> /dev/null; then
    echo -e "${RED}Error: black is not installed${NC}"
    echo "Install it with: pip install black"
    exit 1
fi

# Get all staged Python files
STAGED_PYTHON_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.py$' || true)

if [ -z "$STAGED_PYTHON_FILES" ]; then
    exit 0
fi

echo -e "${YELLOW}Running black on staged Python files...${NC}"

# Run black on staged files
black --line-length 100 $STAGED_PYTHON_FILES

# Check if black made any changes
if ! git diff --cached --quiet $STAGED_PYTHON_FILES; then
    echo -e "${GREEN}✓ Black formatted the following files:${NC}"
    echo "$STAGED_PYTHON_FILES"

    # Add formatted files back to staging
    git add $STAGED_PYTHON_FILES

    echo -e "${YELLOW}Files have been formatted and re-staged.${NC}"
fi

echo -e "${GREEN}✓ Code formatting check passed${NC}"
exit 0
