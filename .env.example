# Environment Configuration Example
# Copy to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Type Selection
# Options: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite

# For SQLite (Development/Testing Default):
DATABASE_PATH=data/market_data.db

# For PostgreSQL/MySQL: Explicit Full Connection String (Optional)
# If set, this takes precedence over DATABASE_TYPE and DB_* variables
# DATABASE_URL=postgresql://user:password@localhost:5432/traderrr
# DATABASE_URL=mysql://user:password@localhost:3306/traderrr

# PostgreSQL/MySQL Connection Details (used if DATABASE_URL not set):
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=traderrr

# Connection Pool Configuration (PostgreSQL/MySQL only):
# SQLite ignores these settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_RECYCLE=3600

# SQL Debugging (for development):
# Set to True to see generated SQL statements in logs
SQL_ECHO=False

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Default API key for development
API_KEY=dev-api-key-12345

# ============================================================================
# YAHOO FINANCE CONFIGURATION
# ============================================================================

# Progress bar in yfinance
YFINANCE_PROGRESS_BAR=False

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# SQLite (Development - DEFAULT)
# DATABASE_TYPE=sqlite
# DATABASE_PATH=data/market_data.db

# PostgreSQL (Production)
# DATABASE_TYPE=postgresql
# DB_USER=postgres
# DB_PASSWORD=secure_password
# DB_HOST=prod-db.example.com
# DB_PORT=5432
# DB_NAME=traderrr_prod

# MySQL (Production Alternative)
# DATABASE_TYPE=mysql
# DB_USER=root
# DB_PASSWORD=secure_password
# DB_HOST=prod-mysql.example.com
# DB_PORT=3306
# DB_NAME=traderrr_prod
